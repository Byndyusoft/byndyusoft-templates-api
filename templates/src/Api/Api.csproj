<Project Sdk="Microsoft.NET.Sdk.Web">

	<PropertyGroup>
		<TargetFramework>net6.0</TargetFramework>
		<Nullable>enable</Nullable>
		<PublishDir>/app/out/api</PublishDir>
		<AssemblyName Condition="'$(SERVICE_NAME)' != ''">$(SERVICE_NAME)</AssemblyName>
		<AssemblyName Condition="'$(SERVICE_NAME)' == ''">byndyusoft-template-api</AssemblyName>
		<RootNamespace>Byndyusoft.Template.Api</RootNamespace>
		<GenerateDocumentationFile>true</GenerateDocumentationFile>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Byndyusoft.AspNetCore.Instrumentation.Tracing" Version="0.1.0" />
		<PackageReference Include="Byndyusoft.Data.Relational" Version="0.7.0" />
		<PackageReference Include="Byndyusoft.Logging.OpenTelemetry" Version="2.0.0" />
		<PackageReference Include="Byndyusoft.MaskedSerialization.Serilog" Version="2.0.0" />
		<PackageReference Include="Microsoft.AspNetCore.Mvc.Versioning" Version="5.0.0" />
		<PackageReference Include="Microsoft.AspNetCore.Mvc.Versioning.ApiExplorer" Version="5.0.0" />
		<PackageReference Include="Npgsql.OpenTelemetry" Version="6.0.5" />
		<PackageReference Include="OpenTelemetry.Exporter.Console" Version="1.3.0" />
		<PackageReference Include="OpenTelemetry.Exporter.Jaeger" Version="1.3.0" />
		<PackageReference Include="OpenTelemetry.Extensions.Hosting" Version="1.0.0-rc9.5" />
		<PackageReference Include="OpenTelemetry.Instrumentation.AspNetCore" Version="1.0.0-rc9.5" />
		<PackageReference Include="prometheus-net.AspNetCore" Version="4.1.1" />
		<PackageReference Include="Swashbuckle.AspNetCore" Version="6.1.4" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\Api.Contracts\Api.Contracts.csproj" />
		<ProjectReference Include="..\Domain\Domain.csproj" />
	</ItemGroup>

</Project>